<h1>Articles Listing Page</h1>
<table> 
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan=3>Actions</th>
    </tr>
  </thead>
<tbody>
  <% @articles.each do |var| %>
    <tr>
      <td><%= var.title %></td>
      <td><%= var.description %></td>
      <td><%= link_to 'Show' , article_path(var)%></td>
      <td><%= link_to 'Edit' , edit_article_path(var)%></td>
      <td><%= link_to 'Delete', article_path(var), method: :delete , data: { confirm: "Are you sure?"}%></td>
    </tr>
  <% end %>
  
</tbody>

</table>
<p>
  <%= link_to 'Create New Article' , new_article_path %>
   
</p>