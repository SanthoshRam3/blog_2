<h1>Articles Listing Page</h1>
<table> 
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>
<tbody>
  <% @articles.each do |var| %>
    <tr>
      <td><%= var.title %></td>
      <td><%= var.description %></td>
      <td><%= link_to 'Show' , article_path(var)%>
      <td><%= link_to 'Delete', article_path(var), method: :delete %></td>
    </tr>
  <% end %>
</tbody>
</table>